// main layout

html, body {
  position: absolute;
  width: 100%;
  height: 100%;
  font-family: font-sans;
  color: #333;
}

img {
	display: inline-block;
	float: left;
	margin-right: 10px;
	border: 3px solid #73AD21;
}

.main-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
}

.main-content {
  position: absolute;
  top: 0;
  right: 0;
  left: 300px;
  bottom: 0;
  height: 100%;
  padding: 20px 40px 50px;
  overflow: auto;
  word-wrap: break-word;
  //word-break: break-all;
}

.main-footer {
  position: fixed;
  bottom: 0;
  left: 250px;
  background-color: lightgray;
  width: 90%;
  padding: 20px;
}

@media mq-mobile {
  .main-container {
    top: 45px;
    left: 0px;
    bottom: 0;
    height: auto;
  }
  .main-content {
    left: 0;
    bottom: 0;
    height: auto;
    padding: 10px 10px;
  }
}
